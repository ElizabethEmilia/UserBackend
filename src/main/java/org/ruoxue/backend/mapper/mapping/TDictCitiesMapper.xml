<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ruoxue.backend.mapper.TDictCitiesMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="org.ruoxue.backend.bean.TDictCities">
		<id column="id" property="id" />
		<result column="province_code" property="provinceCode" />
		<result column="city_code" property="cityCode" />
		<result column="city_name" property="cityName" />
	</resultMap>

	<select id="getCityByProvinceId" resultType="java.lang.String">
		select city_name from t_dict_cities where province_code = #{province_id}
	</select>

	<select id="getCityCodeByName" resultType="java.lang.Integer">
		select city_code from t_dict_cities where city_name = #{name}
	</select>

</mapper>
